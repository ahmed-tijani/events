<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <com.rey.material.widget.TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Ajouter un nouvel événement"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:textStyle="bold" />


    <com.rey.material.widget.LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <com.rey.material.widget.ImageView
            android:id="@+id/sports"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/basketball"
            android:layout_marginLeft="10dp"

            />


        <com.rey.material.widget.ImageView
            android:id="@+id/camping"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/camping"
            android:layout_marginLeft="10dp"
            />

        <com.rey.material.widget.ImageView
            android:id="@+id/cinema"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cinema"
            android:layout_marginLeft="10dp"
            />

        <com.rey.material.widget.ImageView
            android:id="@+id/cycling"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cycling"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />

    </com.rey.material.widget.LinearLayout>

    <com.rey.material.widget.LinearLayout
        android:id="@+id/linear1_category_layout_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Sport"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            />

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:text="Camps"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:text="Cinema"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Vélos"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </com.rey.material.widget.LinearLayout>

    <com.rey.material.widget.LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout_txt"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <com.rey.material.widget.ImageView
            android:id="@+id/concerts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/conterts"
            android:layout_marginLeft="10dp"
            />

        <com.rey.material.widget.ImageView
            android:id="@+id/drama"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/drama"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <com.rey.material.widget.ImageView
            android:id="@+id/fireworks"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fireworks"
            android:layout_marginRight="10dp"
            />

        <com.rey.material.widget.ImageView
            android:id="@+id/gamepad"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gamepad"
            android:layout_marginRight="10dp"

            />

    </com.rey.material.widget.LinearLayout>

    <com.rey.material.widget.LinearLayout
        android:id="@+id/linear2_category_layout_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:text="Kareok"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:text="Theatre"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:text="Party"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />
        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="E-sport"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

    </com.rey.material.widget.LinearLayout>

    <com.rey.material.widget.LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout_txt"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <com.rey.material.widget.ImageView
            android:id="@+id/imprezy_masowe"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/imprezy_masowe"
            android:layout_marginLeft="10dp"
            />

        <com.rey.material.widget.ImageView
            android:id="@+id/kluby"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/picture"
            android:layout_marginLeft="10dp"
            />

        <com.rey.material.widget.ImageView
            android:id="@+id/talks"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/talk"
            android:layout_marginLeft="10dp"
            />

        <com.rey.material.widget.ImageView
            android:id="@+id/uroda"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/plant"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

    </com.rey.material.widget.LinearLayout>

    <com.rey.material.widget.LinearLayout
        android:id="@+id/linear3_category_layout_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:text="En Public"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:text="En Prive"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:text="Meeting"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Santé et beauté"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </com.rey.material.widget.LinearLayout>


</com.rey.material.widget.RelativeLayout>