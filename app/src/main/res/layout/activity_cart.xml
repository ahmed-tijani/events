<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <com.rey.material.widget.RelativeLayout
        android:id="@+id/rl11"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <com.rey.material.widget.TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:height="50dp"
            android:text="Vos événements"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </com.rey.material.widget.RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_above="@id/next_process_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl11"
        ></androidx.recyclerview.widget.RecyclerView>


    <com.rey.material.widget.Button
        android:id="@+id/next_process_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Suivant"
        android:textColor="@android:color/white"
        android:textSize="20dp"

        />
</com.rey.material.widget.RelativeLayout>