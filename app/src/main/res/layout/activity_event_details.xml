<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity">

    <com.rey.material.widget.ImageView
        android:id="@+id/event_image_details"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <com.rey.material.widget.TextView
        android:id="@+id/event_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_image_details"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Nom de l'événement"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.rey.material.widget.TextView
        android:id="@+id/event_category_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Catégorie d'événement"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.rey.material.widget.TextView
        android:id="@+id/event_date_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_category_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Date"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.rey.material.widget.TextView
        android:id="@+id/event_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_date_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Prix"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.rey.material.widget.TextView
        android:id="@+id/event_limit_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_price_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Limite de personnes"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.rey.material.widget.TextView
        android:id="@+id/event_place_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_limit_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Lieu"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:textSize="16dp"
        app:initialNumber="1"
        app:finalNumber="5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/event_place_details"
        android:layout_marginTop="10dp"

        >

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


    <com.rey.material.widget.Button
        android:id="@+id/event_add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:text="Prendre part"
        android:textColor="@android:color/white"
        android:textSize="18dp" />
</com.rey.material.widget.RelativeLayout>