<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewEventActivity"
    android:background="@drawable/new_event">

    <ImageView
        android:id="@+id/select_event_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/select_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/txtNameOfEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/select_event_image"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:hint="Nazwa wydarzenia"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/txtPlace"
        android:layout_below="@id/txtNameOfEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/input_design"
        android:hint="Miejsce"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        />

    <EditText
        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtPlace"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        android:hint="Godzina"
        android:inputType="time"
        />
    <EditText
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data"
        android:inputType="date"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtTime"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        />

    <EditText
        android:id="@+id/txtAmountPpl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Liczba miejsc"
        android:inputType="number"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtDate"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cena za wejÅ›cie"
        android:inputType="number"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtAmountPpl"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        />

    <Button
        android:id="@+id/add_new_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:text="Dodaj wydarzenie"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        />

</RelativeLayout>